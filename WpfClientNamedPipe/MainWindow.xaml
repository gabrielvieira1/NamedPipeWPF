<Window x:Class="WpfClientNamedPipe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClientNamedPipe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <StackPanel Orientation="Vertical">
      <Button Content="Conectar" Click="Connection" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10 0 0"/>
      <TextBlock x:Name="StatusText" Text="Aguardando conexão..." HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 10 0 0"/>
    </StackPanel>
  </Grid>
</Window>
